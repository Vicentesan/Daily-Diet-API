// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(cuid())
  firstName String?
  lastName  String?
  image     String?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("users")
}

model Meal {
  id          String  @id @default(cuid())
  title       String
  description String?

  Date String
  Time String

  onDiet Boolean

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  @@map("meals")
}
